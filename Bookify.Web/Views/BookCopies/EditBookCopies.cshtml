@model BookCopyViewModel
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery antiforgery

@{
    ViewData["Title"] = "Edit Book-Copiy";
}


<div class="alert bg-light-primary border border-primary border-3 border-dashed d-flex justify-content-between w-100 p-5 mb-10">
    <div class="d-flex align-items-center">
        <div class="symbol symbol-40px me-4">
            <div class="symbol-label fs-2 fw-semibold text-success">
                <span class="svg-icon svg-icon-2 svg-icon-primary">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path opacity="0.3" d="M21.25 18.525L13.05 21.825C12.35 22.125 11.65 22.125 10.95 21.825L2.75 18.525C1.75 18.125 1.75 16.725 2.75 16.325L4.04999 15.825L10.25 18.325C10.85 18.525 11.45 18.625 12.05 18.625C12.65 18.625 13.25 18.525 13.85 18.325L20.05 15.825L21.35 16.325C22.35 16.725 22.35 18.125 21.25 18.525Z" fill="currentColor"></path>
                        <path d="M11.05 11.025L2.84998 7.725C1.84998 7.325 1.84998 5.925 2.84998 5.525L11.05 2.225C11.75 1.925 12.45 1.925 13.15 2.225L21.35 5.525C22.35 5.925 22.35 7.325 21.35 7.725L13.05 11.025C12.45 11.325 11.65 11.325 11.05 11.025Z" fill="currentColor"></path>
                    </svg>
                </span>
            </div>
        </div>
        <div class="d-flex flex-column pe-0 pe-sm-10">
            <h5 class="mb-1">Edit Book-Copy</h5>
        </div>
    </div>
</div>

<div class="card shadow-sm">

    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <form method="post" asp-controller="BookCopies" asp-action="EditBookCopies">


                    <!-- Hidden Id Input -->
                    <input type="hidden" asp-for="Id" />

                    <!-- Hidden BookId Input -->
                    <input type="hidden" asp-for="BookId" />


                    <!-- Hidden Serial Number Input -->
                    <input type="hidden" asp-for="SerialNumber" />

                    <input type="hidden" asp-for="CreatedById" />

                    <!-- Title -->
                    <div class="mb-5">
                        <div class="form-floating mb-2">
                            <input  type="text" name="EditorNumber" class="form-control form-control-solid" asp-for="EditorNumber" placeholder="EditorNumber" required />
                            <label asp-for="EditorNumber">EditorNumber</label>
                        </div>
                        <span asp-validation-for="EditorNumber" class="text-danger"></span>
                    </div>


                    <!-- Availability -->
                        <div class="mb-5">
                            <div class="col mb-2">
                                <div class="form-check form-switch form-check-solid form-check-custom mb-2">
                                    <input class="form-check-input" type="checkbox" asp-for="IsAvailableForRental">
                                    <label class="form-check-label" asp-for="IsAvailableForRental"></label>
                                </div>
                            </div>
                        </div>

                   

                    <!-- Submit Button -->
                    <div class="card-footer">
                        <div class="ml-n25">
                            <button type="submit" class="btn btn-primary btn-sm " id="submitsBtn">
                                <i class="bi bi-check2"></i>
                                Save
                            </button>
                            <a class="btn btn-light text-primary ms-3" asp-action="Index">Cancel</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


<input type="hidden" name="__RequestVerificationToken" value="@antiforgery.GetAndStoreTokens(Context).RequestToken" />


@section CustomScripts
{
    <!-- Add any custom scripts here -->
}

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/site.js" asp-append-version="true"></script>
}

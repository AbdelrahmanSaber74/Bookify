@model SubscriberSearchResultViewModel

@{
    ViewData["Title"] = "Subscribers";
}

<form asp-action="Search">
    <!--begin::Card-->
    <div class="card mb-7">
        <div class="card-header">
            <h3 class="card-title">Find a Subscriber</h3>
        </div>
        <div class="card-body">
            <div class="d-flex align-items-center">
                <!-- Input field with search icon -->
                <div class="position-relative w-md-400px me-md-2">
                    <span class="svg-icon svg-icon-3 svg-icon-gray-500 position-absolute top-50 translate-middle ms-6">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor"></rect>
                            <path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor"></path>
                        </svg>
                    </span>
                    <input type="text" class="form-control form-control-solid ps-10" placeholder="Search by mobile, national ID, or email ..." name="Value" required >


            </div>

                <!-- Search button -->
                <div class="d-flex align-items-center">
                    <button type="submit" class="btn btn-primary me-5">Search</button>
                </div>
            </div>
        </div>
    </div>
    <!--end::Card-->
</form>


@if (Model is null)
{
    <!--begin::Alert-->
    <div class="alert bg-light-warning border border-warning border-3 border-dashed d-flex flex-column flex-sm-row w-100 p-5">
        <!--begin::Wrapper-->
        <div class="d-flex flex-column pe-0 pe-sm-10">
            <!--begin::Content-->
            <span>No Subscribers were found!</span>
            <!--end::Content-->
            <a asp-action="Create" class="btn btn-primary mt-5">Add Subscriber</a>
        </div>
        <!--end::Wrapper-->
    </div>
    <!--end::Alert-->
}
else
{
    <div class="d-flex justify-content-between">
        <div class="d-flex flex-column justify-content-center">
            <h4>@Model.FirstName</h4>
            <div class="mt-3">
                <form asp-action="Details" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-primary">Details</button>
                </form>
            </div>
        </div>
        <div>
            <div class="symbol symbol-100px">
                <img src="@Model.ImageThumbnailUrl" alt="" />
            </div>
        </div>
    </div>

}



@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}

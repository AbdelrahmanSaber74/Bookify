@model CategoryViewModel

@{
    ViewData["Title"] = "Edit Category";
}


<div class="alert bg-light-primary border border-primary border-3 border-dashed d-flex justify-content-between w-100 p-5 mb-10">
    <div class="d-flex align-items-center">
        <div class="symbol symbol-40px me-4">
            <div class="symbol-label fs-2 fw-semibold text-success">
                <span class="svg-icon svg-icon-2 svg-icon-primary">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path opacity="0.3" d="M21.25 18.525L13.05 21.825C12.35 22.125 11.65 22.125 10.95 21.825L2.75 18.525C1.75 18.125 1.75 16.725 2.75 16.325L4.04999 15.825L10.25 18.325C10.85 18.525 11.45 18.625 12.05 18.625C12.65 18.625 13.25 18.525 13.85 18.325L20.05 15.825L21.35 16.325C22.35 16.725 22.35 18.125 21.25 18.525Z" fill="currentColor"></path>
                        <path d="M11.05 11.025L2.84998 7.725C1.84998 7.325 1.84998 5.925 2.84998 5.525L11.05 2.225C11.75 1.925 12.45 1.925 13.15 2.225L21.35 5.525C22.35 5.925 22.35 7.325 21.35 7.725L13.05 11.025C12.45 11.325 11.65 11.325 11.05 11.025Z" fill="currentColor"></path>
                    </svg>
                </span>
            </div>
        </div>
        <div class="d-flex flex-column pe-0 pe-sm-10">
            <h5 class="mb-1">Edit Category</h5>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form method="post" asp-controller="Categories" asp-action="UpdateCategory">
                    <input type="hidden" asp-for="Id" /> <!-- Hidden field for category Id -->
                    <div class="mb-3">
                        <div class="form-floating mb-2">
                            <input type="text" class="form-control" placeholder="Category Name" asp-for="Name" required />
                            <label asp-for="Name"></label>
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>


                    <div class="mb-5">
                        <label asp-for="IsDeleted" class="form-label"></label>
                        <select asp-for="IsDeleted" class="form-select" required>
                            <option selected disabled value="">Select an option</option>
                            <option value="false">Available</option>
                            <option value="true">Deleted</option>

                        </select>
                        <span asp-validation-for="IsDeleted" class="text-danger"></span>
                    </div>


                    <!-- Submit Button -->
                    <div class="card-footer">
                        <div class="ml-n25">

                            <button type="submit" class="btn btn-primary btn-sm " id="submitBtn">
                                <i class="bi bi-check2"></i>
                                <span class="loading-indicator" style="display: none;">Loading...</span>
                                Save
                            </button>
                            <a class="btn btn-light text-primary ms-3" asp-action="Index">Cancel</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}
